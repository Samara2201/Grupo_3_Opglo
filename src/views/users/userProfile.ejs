<%- include('../partials/head'); %>

	<body>
		<%- include('../partials/navbar'); %>
			<div class="container rounded bg-white mt-5 mb-5">
				<div class="row">
					<div class="col-md-3 border-right">
						<div class="d-flex flex-column align-items-center text-center p-3 py-5">
							<img class="rounded-circle mt-5" width="200px" src="/images/avatars/<%= user.avatar %>">
							<span class="font-weight-bold">
								<%= user.fullName %>
							</span>
						</div>
					</div>
					<div class="col-md-9">
						<div class="p-3 py-5">
							<h4 class="text-left">Perfil</h4>
							<div class="row mt-3">
								<div class="col-md-12">
									<label class="labels">Nombre Completo</label>
									<input type="text" class="form-control" value="<%= user.fullName %>">
								</div>
								<div class="col-md-12">
									<label class="labels">País</label>
									<input type="text" class="form-control" value="<%= user.country %>">
								</div>
								<div class="col-md-12">
									<label class="labels">Correo electrónico</label>
									<input type="text" class="form-control" value="<%= user.email %>">
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>

			<%- include('../partials/footer'); %>
	</body>
